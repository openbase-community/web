{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend: Web",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": "${config:docker.ports.webDebug}"
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/..",
                    "remoteRoot": "/app"
                }
            ],
            "django": true,
            "justMyCode": false,
            "preLaunchTask": "Docker: Web",
            "postDebugTask": "Docker: Down Web"
        },
        {
            "name": "Backend: Worker",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": "${config:docker.ports.workerDebug}"
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                }
            ],
            "django": true,
            "justMyCode": false,
            "preLaunchTask": "Docker: Worker",
            "postDebugTask": "Docker: Down Worker"
        }
    ],
    "compounds": [
        {
            "name": "Backend",
            "configurations": [
                "Backend: Web",
                "Backend: Worker"
            ],
            "stopAll": true
        }
    ]
}
